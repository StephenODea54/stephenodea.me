---
import { BlurFade } from '@/components/react/BlurFade';
import { ResumeCard } from '@/components/react/ResumeCard';
import { BLUR_FADE_DELAY } from '@/constants/BLUR_FADE_DELAY';

const CERTS = [
    {
        altText: 'Exam STAM',
        href: 'https://www.soa.org/globalassets/assets/files/edu/2021/2021-02-exam-stam-syllabi.pdf',
        logoUrl: '/soa_logo.png',
        period: 'Jun 2022',
        subtitle: 'Short-Term Actuarial Mathematics',
        title: 'Exam STAM',
    },
    {
        altText: 'Exam PA',
        href: 'https://www.soa.org/education/exam-req/edu-exam-pa-detail/',
        logoUrl: '/soa_logo.png',
        period: 'Dec 2021',
        subtitle: 'Predictive Analytics',
        title: 'Exam PA',
    },
    {
        altText: 'Exam SRM',
        href: 'https://www.soa.org/education/exam-req/edu-exam-srm-detail/',
        logoUrl: '/soa_logo.png',
        period: 'Sep 2021',
        subtitle: 'Statistics for Risk Modeling',
        title: 'Exam SRM',
    },
    {
        altText: 'Youngstown State University',
        href: 'https://ysu.edu/academics/science-technology-engineering-mathematics/data-analytics-certificate',
        logoUrl: '/ysu_logo.png',
        period: ' May 2021',
        subtitle: 'Graduate Certificate in Data Analytics',
        title: 'Youngstown State University',
    },
    {
        altText: 'Exam IFM',
        href: 'https://www.soa.org/491fb5/globalassets/assets/files/edu/2022/spring/2022-07-exam-ifm-syllabus.pdf',
        logoUrl: '/soa_logo.png',
        period: 'Mar 2021',
        subtitle: 'Investment & Financial Markets',
        title: 'Exam IFM',
    },
    {
        altText: 'Exam FM',
        href: 'https://www.soa.org/education/exam-req/edu-exam-fm-detail/',
        logoUrl: '/soa_logo.png',
        period: 'Jun 2019',
        subtitle: 'Financial Mathematics',
        title: 'Exam FM',
    },
    {
        altText: 'Exam P',
        href: 'https://www.soa.org/education/exam-req/edu-exam-p-detail/',
        logoUrl: '/soa_logo.png',
        period: 'Mar 2019',
        subtitle: 'Probability',
        title: 'Exam P',
    },
];
---

<section id='work'>
    <div class='flex min-h-0 flex-col gap-y-3'>
        <BlurFade client:only delay={BLUR_FADE_DELAY * 16}>
            <h2 class='text-xl font-bold'>Certifications</h2>
        </BlurFade>
        {
            CERTS.map((cert, index) => (
                <BlurFade
                    client:only
                    delay={BLUR_FADE_DELAY * 17 + index * 0.05}
                >
                    <ResumeCard
                        client:only
                        altText={cert.altText}
                        href={cert.href}
                        logoUrl={cert.logoUrl}
                        period={cert.period}
                        subtitle={cert.subtitle}
                        title={cert.title}
                    />
                </BlurFade>
            ))
        }
    </div>
</section>
