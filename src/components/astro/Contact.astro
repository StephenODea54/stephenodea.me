---
import { BlurFade } from '@/components/react/BlurFade';
import { BLUR_FADE_DELAY } from '@/constants/BLUR_FADE_DELAY';
---

<section id='contact'>
    <div
        class='grid w-full items-center justify-center gap-4 px-4 py-12 text-center md:px-6'
    >
        <BlurFade client:only delay={BLUR_FADE_DELAY * 16}>
            <div class='space-y-3'>
                <div
                    class='inline-block rounded-lg bg-foreground px-3 py-1 text-sm text-background'
                >
                    Contact
                </div>
                <h2 class='text-3xl font-bold tracking-tighter sm:text-5xl'>
                    Get in Touch
                </h2>
                <a
                    class='mx-auto max-w-[600px] text-muted-foreground md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed'
                    href='mailto:hey@stephenodea.me'
                >
                    Want to chat? Just shoot me an email at <span
                        class='text-blue-500 hover:underline'
                        >hey@stephenodea.me</span
                    >
                </a>
            </div>
        </BlurFade>
    </div>
</section>
