---
import { BlurFade } from '@/components/react/BlurFade';
import { ResumeCard } from '@/components/react/ResumeCard';

import { BLUR_FADE_DELAY } from '@/constants/BLUR_FADE_DELAY';

const EDUCATION = [
    {
        altText: 'Eastern University',
        href: 'https://www.eastern.edu/academics/graduate-programs/ms-data-analytics?utm_campaign=&utm_term=&creative=687475367518&keyword=online%20masters%20in%20analytics&matchtype=b&network=g&device=c&gad_source=1&gclid=Cj0KCQjwtsy1BhD7ARIsAHOi4xa0WPN0FppMcwD37CF2f955paR1ZlHDCgZfcReTtiOjNFKCwEsYGecaAvUpEALw_wcB',
        logoUrl: '/eu_logo.png',
        period: 'May 2021 - May 2022',
        subtitle: "Master's Degree in Data Science (MSDS)",
        title: 'Eastern University',
    },
    {
        altText: 'Youngstown State University',
        href: 'https://ysu.edu/academics/science-technology-engineering-mathematics/mathematics-major',
        logoUrl: '/ysu_logo.png',
        period: 'Aug 2015 - May 2021',
        subtitle: "Bachelor's Degree in Mathematics (BS)",
        title: 'Youngstown State University',
    },
];
---

<section id='education'>
    <div class='flex min-h-0 flex-col gap-y-3'>
        <BlurFade client:only delay={BLUR_FADE_DELAY * 5}>
            <h2 class='text-xl font-bold'>Education</h2>
        </BlurFade>
        {
            EDUCATION.map((school, index) => (
                <BlurFade
                    client:only
                    delay={BLUR_FADE_DELAY * 6 + index * 0.05}
                >
                    <ResumeCard
                        client:only
                        altText={school.altText}
                        href={school.href}
                        logoUrl={school.logoUrl}
                        period={school.period}
                        subtitle={school.subtitle}
                        title={school.title}
                    />
                </BlurFade>
            ))
        }
    </div>
</section>
