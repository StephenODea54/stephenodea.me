---
import { Badge } from '@/components/react/Badge';
import { BlurFade } from '@/components/react/BlurFade';

import { BLUR_FADE_DELAY } from '@/constants/BLUR_FADE_DELAY';

const SKILLS = [
    'TypeScript',
    'Python',
    'Machine Learning',
    'Web Development',
    'Data Warehousing',
    'Data Orchestration',
    'ETL/ELT',
    'AWS',
    'Azure',
    'Terraform',
    'CI/CD',
    'Docker',
    'SQL',
    'Googling ðŸ« ',
];
---

<section id='skills'>
    <div class='flex min-h-0 flex-col gap-y-3'>
        <BlurFade client:only delay={BLUR_FADE_DELAY * 7}>
            <h2 class='text-xl font-bold'>Skills</h2>
        </BlurFade>
        <div class='flex flex-wrap gap-1'>
            {
                SKILLS.map((skill, index) => (
                    <BlurFade
                        client:only
                        delay={BLUR_FADE_DELAY * 8 + index * 0.05}
                    >
                        <Badge>{skill}</Badge>
                    </BlurFade>
                ))
            }
        </div>
    </div>
</section>
