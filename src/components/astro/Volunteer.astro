---
import { BlurFade } from '@/components/react/BlurFade';
import { ResumeCard } from '@/components/react/ResumeCard';
import { BLUR_FADE_DELAY } from '@/constants/BLUR_FADE_DELAY';

const VOLUNTEER = [
    {
        altText: 'CLRD',
        description: [
            'Served as a football coach and board member.',
            'Oversaw the administrative functions of the organization such as board meetings, fundraising, and partnership relations.',
        ],
        logoUrl: '/clrd_logo.png',
        period: '2015 - 2022',
        subtitle: 'Non-Profit Youth Football and Cheerleading Organization',
        title: 'Campbell Little Red Devils Youth Football Organization',
    },
];
---

<section id='volunteer'>
    <BlurFade client:only delay={BLUR_FADE_DELAY * 13}>
        <h2 class='text-xl font-bold'>Volunteer Work</h2>
    </BlurFade>
    <BlurFade client:only delay={BLUR_FADE_DELAY * 14}>
        <p
            class='prose dark:prose-invert mb-3 max-w-full text-pretty font-sans text-sm text-muted-foreground'
        >
            Because it's good for developers to touch grass sometimes.
        </p>
    </BlurFade>
    {
        VOLUNTEER.map((vol, index) => (
            <BlurFade client:only delay={BLUR_FADE_DELAY * 15 + index * 0.05}>
                <ResumeCard
                    client:only
                    altText={vol.altText}
                    description={vol.description}
                    logoUrl={vol.logoUrl}
                    period={vol.period}
                    subtitle={vol.subtitle}
                    title={vol.title}
                />
            </BlurFade>
        ))
    }
</section>
